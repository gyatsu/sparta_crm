<div class="row">
  <div class="col-lg-12">
    <h1>顧客情報一覧</h1>
    <%= search_form_for @q do |f| %>
    <div class="row">
      <div class="col-sm-3">
        <%= f.label :family_name, "姓" %>
        <%= f.search_field :family_name_cont,class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3">
        <%= f.label :given_name, "名" %>
        <%= f.search_field :given_name_cont,class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3">
        <%= f.label :given_name, "会社名" %>
        <%= f.search_field :company_name_cont,class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3">
        <%= f.label :given_name, "電子メール" %>
        <%= f.search_field :email_cont,class: "form-control" %>
      </div>
    </div>







    <%= f.submit "検索" %>
    <% end %>
    <table class="table table-striped">
      <thead>
        <th>姓</th>
        <th>名</th>
        <th>会社名</th>
        <th>電子メール</th>
        <th>リンク</th>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.family_name %></td>
          <td><%= customer.given_name %></td>
          <td><%= customer.company.name %></td>
          <td><%= customer.email %></td>
          <td><%= link_to '詳細', customer, class: "btn btn-dafault btn-xs" %></td>
          </tr>
          <% end %>

      </tbody>
    </table>

    <%= paginate @customers %>
